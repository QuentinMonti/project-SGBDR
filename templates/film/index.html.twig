{% extends 'base.html.twig' %}

{% block head %}
    {% block title %}Film index{% endblock %}
{% endblock %}

{% block body %}
    <div style='border: 2px solid black;
                border-radius: 2%;
                width: 40%;
                height: 18em;
                text-align: center;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 5%;
                background-color: #F5F5F5;'>
        <h1>Filtrer :</h1>
        <p >Nom du film : <a href="{{ path('film_title_asc') }}" >ASC</a>   <a href="{{ path('film_title_desc')}}" >DESC</a></p><br>
        <p>Genre du film : <a href="{{ path('film_category_asc') }}">ASC</a>   <a href="{{ path('film_category_desc') }}" >DESC</a></p><br>
        <p>Nombre de location : <a href="{{ path('film_rental_asc') }}" >ASC</a>   <a href="{{ path('film_rental_desc') }}" >DESC</a></p><br>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Prix Location</th>
                <th>Classement</th>
                <th>Cat√©gorie</th>
                <th>Nombre de Location</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.title }}</td>
                <td>{{ film.rental_rate }}</td>
                <td>{{ film.rating }}</td>
                <td>{{ film.name }}</td>
                <td>{{ film.rental_number }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style='margin-left: 50%; margin-right: 50%;'>{{knp_pagination_render(films)}}</div>

{% endblock %}
